<div class="container">
  <div class="row">
    <div class="col-md-12 center align">
      <h1 class="center-align">Eat-da-Burger</h1>
      <img class="center-align" id="logo" src="/assets/img/burger.jpg" alt="burger"></img>
    </div>
    <div class="col-xs-6 text-center" class="task">
      <div class="row">
        {{#each burger_data}}
          {{#unless this.devoured}}
            <div class="col-xs-9 text-center">
              <pre>{{this.id}}. {{this.burger_name}}
                                    </pre> {{this.Date}}
            </div>

            <div class="col-xs-3 text-center">
              <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input input type="hidden" type="text" name="burger_id" value= {{this.id}}><br>
                <button type="submit" class="btn btn-primary">Eat thy burger!</button>
              </form>
            </div>

          {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-xs-6 text-center" class="task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <!-- readonly?? -->
          <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
      <form action="/burgers/create" method="POST">
        <input type="text" class="form-control" name="burger_name" id="enter_text">
        <p>Enter the burger you want to eat and click the "Submit" button.</p>
        <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
      </form>

    </div>
  </div>
</div>
